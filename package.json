{
  "name": "node-task-app",
  "version": "1.0.0",
  "description": "A simple task manager written with nodejs for learning purposes.\r Includes file uploads, email sending and user profiles.",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand",
    "ci-test": "env-cmd -f ./config/test.env jest --forceExit --runInBand",
    "coverage": "env-cmd -f ./config/test.env jest --forceExit --runInBand --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/canyener/task-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.7",
    "mongoose": "^5.9.11",
    "multer": "^1.4.2",
    "sharp": "^0.25.2",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "jest": "^26.0.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  }
